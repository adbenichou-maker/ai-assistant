  <div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h1>Give a name to this recipe:</h1>
    <%= simple_form_for [@message, @recipe] do |f| %>
      <%= f.input :title %>
      <%= f.input :comment %>
      <div class="recipe-content-preview">
        <h3>Message Content:</h3>
        <%= raw(render_markdown(@message.content)) %>
      </div>
      <%= f.submit "Save Recipe", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
