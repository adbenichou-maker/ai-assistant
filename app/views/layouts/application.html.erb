<!DOCTYPE html>
<html>
  <head>
    <title>AiAssistant</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <% unless devise_controller? %>
      <div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
    <div class="container-fluid">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "fridgeogo.png" %>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Cookbook", recipes_path, class: "nav-link" %>
            </li>

            <%# ------------------------------------------------------------------- %>
            <%# NEW: Chats button triggers the Offcanvas slider from the right     %>
            <li class="nav-item">
              <button class="nav-link btn btn-link" type="button" data-bs-toggle="offcanvas" data-bs-target="#chatsOffcanvas" aria-controls="chatsOffcanvas">
                Chats
              </button>
            </li>
            <%# ------------------------------------------------------------------- %>

            <li class="nav-item dropdown">
              <%= image_tag "https://cdn-icons-png.flaticon.com/512/219/219983.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
      <div class="container">
    <% end %>
      <%= yield %>
    </div>

  <%# RENDER CHATS OFFCANVAS %>
  <%= render 'shared/offcanvas' %>
  </body>
</html>
